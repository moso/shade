{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Page navigation partial }}
{{navigation}}

{{! Offcanvas page-wrapper }}
<div class="wrapper">

    {{! The big featured header on the homepage, with the site logo and description }}
    <header>
        <div class="inner">
            {{! Each post has the blog logo at the top, with a link back to the home page }}
            <a href="{{@blog.url}}">
            {{#if @blog.logo}}
                <img src="{{@blog.logo}}">
            {{else}}
                <h1>{{@blog.title}}</h1>
            {{/if}}
            </a>
        </div>
    </header>

    <main class="content">
        <div class="container">
            <div class="row">
                <div class="md-10 md-offset-1">
                    <article class="{{post_class}}">
                        {{#post}}
                        {{! Everything below outputs content of the the post which has been published }}
                        <span class="post-meta"><time datetime="{{date format='DD. MMM, YYYY'}}">{{date format='DD. MMM, YYYY'}}</time>{{#if tags}} on {{tags separator=" | "}}{{/if}}</span>

                        <h1 class="post-title">{{{title}}}</h1>
                        <div class="post-content">
                            {{content}}
                        </div>

                        <div class="post-footer">
                            <div class="share">
                                <ul class="list-inline">
                                    <li><strong>Share:</strong></li>
                                    <li>
                                        <a href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                            <i class="mdi mdi-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                            <i class="mdi mdi-twitter"></i>
                                        </a>
                                    </li>
                                </ul>                                
                            </div>
                        </div>
                        {{/post}}
                    </article>
                </div>
            </div>
        </div>
    </main>

    {{> footer}}
</div>